<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".University_SignUp">

    <ImageView
        android:id="@+id/imageViewManageDep"
        android:layout_width="93dp"
        android:layout_height="115dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textViewUniDepInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:elegantTextHeight="true"
        android:text="Department Information"
        android:textAlignment="center"
        android:textColor="#555252"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewManageDep" />

    <Button
        android:id="@+id/button_DeleteUni"
        android:layout_width="153dp"
        android:layout_height="69dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/signin_bg"
        android:text="Delete Department"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_AddUni"
        app:layout_constraintVertical_bias="0.053" />

    <Button
        android:id="@+id/button_AddUni"
        android:layout_width="151dp"
        android:layout_height="58dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/signin_bg"
        android:text="Add Department"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUniDepInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>