<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Eligibility_frag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Select Preferred Program"
            android:textAlignment="center"
            android:textSize="30dp"
            android:paddingTop="12dp"
            android:background="#05D5FA"
            android:id="@+id/program"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.186" />

        <Spinner
            android:id="@+id/spinnerprogram"
            android:layout_width="268dp"
            android:layout_height="43dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:background="@android:drawable/btn_dropdown"
            android:hint="Select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/program"
            app:layout_constraintVertical_bias="0.258" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Choose Program Type"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/spinnerprogram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.261"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/program"
            app:layout_constraintVertical_bias="0.935" />

        <Button
            android:id="@+id/btnEligibility"
            android:layout_width="228dp"
            android:layout_height="50dp"
            android:background="@drawable/signin_bg"
            android:text="Check Eligibility"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerprogram"
            app:layout_constraintVertical_bias="0.517" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Status"
            android:textSize="25dp"
            android:textAlignment="center"
            android:visibility="invisible"
            android:paddingTop="7dp"
            android:background="#05f2fa"
            app:layout_constraintBottom_toTopOf="@+id/spinnerprogram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/program" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>